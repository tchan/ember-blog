  <div class="post">
      {{#if isEditing}}
        {{textarea value=post.title cols="60" rows="1" placeholder="Title"}}
        {{textarea value=post.body cols="60" rows="5" placeholder="Body post"}}
        <p>- {{post.author}}</p>
        <div class="button-container">
          <div class="left">
            <button class="left" {{action 'savePost' post}}>Save</button>
          </div>
          <div class="right">
            <button class="right-item" {{action 'cancelEdit' post}}>Cancel</button>
            <button class="right-item" {{action 'deletePost' post}}>Delete</button>
          </div>
        </div>
      {{else}}
        <h1>{{post.title}}</h1>
        <p>{{post.body}}</p>
        <p>- {{post.author}}</p>
        <div class="button-container">
          <div class="right">
            <button class="right-item" {{action 'editPost'}}>Edit</button>
          </div>
        </div>
      {{/if}}
  </div>
  <div class="blog-comment">
    {{#if hasComments}}
      {{hasComments}} {{hasCommentsText}}. <a href=# {{action 'showCommentTextArea'}}>Join the conversation!</a>
    {{else}}
      No comments yet. <a href=# {{action 'showCommentTextArea'}}>Be the first!</a>
    {{/if}}
    {{#if showCommentTextArea}}
      {{#each post.comments as |comment|}}
        <br>
        {{comment.message}}
      {{/each}}
      {{textarea value=comment cols="60" rows="1" placeholder="Leave a comment"}}
      <button class="right-item" {{action 'saveComment' comment post}}>Save</button>
    {{/if}}
  </div>